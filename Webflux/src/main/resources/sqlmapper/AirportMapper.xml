<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.AirportMapper">

	<!-- 비행정보 저장 -->
	<insert id='insertAirport'>
		insert into airline(airportId, airportNm)
		values
		(#{airportId}, #{airportNm})
	</insert>

	<!-- 비행정보 조회 -->
	<select id="selectAirport"
		resultType="com.example.demo.airport.AirportVO">
		select * from airport
		where airportId = #{airportId} and
		airportNm = #{airportNm}
	</select>

	<!-- 비행정보 수정 -->
	<update id="updateAirport">
		update airline
		set airportId = #{airportId}, airportNm
		= #{airportNm}
	</update>

	<!-- 비행정보 삭제 -->
	<delete id='deleteAirport'>
		delete from airport where airlineId = #{airportId}
	</delete>

</mapper>